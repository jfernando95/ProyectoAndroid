                android:text="Cedula" />

            <EditText
                android:id="@+id/ingCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Ingrese su Cedula" />
